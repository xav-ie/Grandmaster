<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="100.0" spacing="7.0" VBox.vgrow="ALWAYS">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="416.0" spacing="15.0">
         <children>
            <Label fx:id="playerNumber" text="playerID">
               <font>
                  <Font size="21.0" />
               </font>
               <styleClass>
                  <String fx:value="thin" />
                  <String fx:value="large" />
               </styleClass>
            </Label>
            <Ellipse fx:id="playerCircle" radiusX="15.0" radiusY="15.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
      </HBox>
      <Label text="Captured Pieces:">
         <styleClass>
            <String fx:value="bold" />
            <String fx:value="medium" />
         </styleClass>
      </Label>
      <FlowPane prefHeight="200.0" prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</fx:root>